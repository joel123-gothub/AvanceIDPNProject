<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/custom_background"
    tools:context=".Fragments.FragmentRegistro"
    >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TituloRegistroPlastico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/times_roman_font"            android:text="@string/aniadir_text"
            android:textAlignment="center"
            android:shadowColor="#00FF8F"
            android:shadowDx="12"
            android:shadowDy="12"
            android:shadowRadius="8"
            android:textStyle="bold"
            android:textColor="#19DD86"
            android:textSize="28sp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/FotoPlastic"
            android:layout_width="65dp"
            android:layout_height="81dp"
            android:layout_marginTop="40dp"
            android:scaleX="2"
            android:scaleY="2"
            app:srcCompat="@drawable/take_photo_background" />

        <Button
            android:id="@+id/btnCamara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:backgroundTint="@null"
            android:background="@drawable/background_button"
            android:fontFamily="@font/times_roman_font"
            android:gravity="center"
            android:text="Agregar imagen"
            android:textSize="13dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtNamePlastic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:autoText="false"
            android:ems="10"
            android:fontFamily="@font/times_roman_font"
            android:hint="@string/hint_nombre_plastic"
            android:inputType="textPersonName"
            android:textColorHighlight="#009688"
            android:textColorHint="#009688"
            android:textSize="15dp"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/txtFecPlastic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/times_roman_font"
            android:hint="@string/hint_fecha_plastic"
            android:inputType="date"
            android:textColorHint="#009688"
            android:textSize="15dp"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/txtOrigenPlastic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/times_roman_font"
            android:hint="@string/hint_origen_plastic"
            android:inputType="textPersonName"
            android:textColorHighlight="#009688"
            android:textColorHint="#009688"
            android:textSize="15dp"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/txtUbicationPlastic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/times_roman_font"
            android:hint="@string/hint_ubicación_plastic"
            android:inputType="textPersonName"
            android:textColorHint="#009688"
            android:textSize="15dp"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/txtDescriptionPlastic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/times_roman_font"
            android:hint="@string/hint_descripción_plastic"
            android:inputType="textMultiLine|textPersonName"
            android:lines="5"
            android:textColorHint="#009688"
            android:textSize="15dp"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <Spinner
            android:id="@+id/categoria_plastic"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:backgroundTintMode="add"
            android:popupBackground="@drawable/custom_background"
            android:dropDownSelector="@drawable/custom_background"
            android:entries="@array/strCategorias"
            android:fontFamily="@font/times_roman_font"
            android:foregroundTint="#19DD86"
            android:textAlignment="center"
            android:touchscreenBlocksFocus="false"
            app:backgroundTint="#19DD86"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_button"
            android:fontFamily="@font/times_roman_font"
            android:textStyle="bold"
            android:text="Registrar"
            android:textSize="16dp"
            app:backgroundTint="@null"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</LinearLayout>